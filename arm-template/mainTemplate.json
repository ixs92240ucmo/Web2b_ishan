{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "type": "string",
      "defaultValue": "dev",
      "allowedValues": ["dev", "prod"]
    },
    "dbAdminPassword": {
      "type": "securestring"
    }
  },
  "variables": {
    "uniqueSuffix": "[take(uniqueString(resourceGroup().id), 8)]",
    "frontendName": "[concat('frontend-', parameters('environment'), '-', variables('uniqueSuffix'))]",
    "backendName": "[concat('backend-', parameters('environment'), '-', variables('uniqueSuffix'))]",
    "dbServerName": "[concat('mysql-', parameters('environment'), '-', variables('uniqueSuffix'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "databaseDeployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, 'databaseModule.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "serverName": { "value": "[variables('dbServerName')]" },
          "dbName": { "value": "webappdb" },
          "adminUser": { "value": "dbadmin" },
          "adminPassword": { "value": "[parameters('dbAdminPassword')]" },
          "location": { "value": "[resourceGroup().location]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "backendDeployment",
      "dependsOn": ["databaseDeployment"],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, 'backendModule.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "backendAppName": { "value": "[variables('backendName')]" },
          "location": { "value": "[resourceGroup().location]" },
          "dbConnectionString": {
            "value": "[concat('Server=', variables('dbServerName'), '.mysql.database.azure.com;Database=webappdb;Uid=dbadmin;Pwd=', parameters('dbAdminPassword'), ';')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "frontendDeployment",
      "dependsOn": ["backendDeployment"],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, 'frontendModule.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "siteName": { "value": "[variables('frontendName')]" },
          "location": { "value": "[resourceGroup().location]" }
        }
      }
    }
  ],
  "outputs": {
    "frontendUrl": {
      "type": "string",
      "value": "[concat('https://', variables('frontendName'), '.azurewebsites.net')]"
    },
    "backendUrl": {
      "type": "string",
      "value": "[concat('https://', variables('backendName'), '.azurewebsites.net')]"
    }
  }
}